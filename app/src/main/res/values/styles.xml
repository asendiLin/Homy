<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 全局Button的style -->
<style name="global_bt_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/space_xxl</item>
    <item name="android:layout_marginRight">@dimen/space_xxl</item>
    <item name="android:layout_marginTop">@dimen/space_l</item>
    <item name="android:background">@drawable/bt_bg</item>
    <item name="android:textSize">@dimen/txt_m</item>
    <item name="android:textColor">@color/colorTextWhite</item>
</style>
    <!-- 发布需求Linearlayout的style -->
    <style name="publish_ll_style">
        <item name="android:layout_marginTop">@dimen/space_s</item>
        <item name="android:layout_marginBottom">@dimen/space_s</item>
        <item name="android:layout_marginRight">@dimen/space_m</item>
        <item name="android:layout_marginLeft">@dimen/space_xs</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 发布需求Textview的style -->
    <style name="publish_tv_style">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/space_xxl</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--需求详情的LinearLayout-->
    <style name="need_detail_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_m</item>
        <item name="android:layout_marginTop">@dimen/space_m</item>
    </style>

    <!--需求详情的TextView-->
    <style name="need_detail_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>

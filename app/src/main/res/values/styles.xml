<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 全局Button的style -->
<style name="global_bt_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/space_xxl</item>
    <item name="android:layout_marginRight">@dimen/space_xxl</item>
    <item name="android:layout_marginTop">@dimen/space_l</item>
    <item name="android:background">@drawable/bt_bg</item>
    <item name="android:textSize">@dimen/txt_m</item>
    <item name="android:textColor">@color/colorTextWhite</item>
</style>
    <!-- 回复Button的style -->
    <style name="reply_bt_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_xl</item>
        <item name="android:layout_marginLeft">@dimen/space_l</item>
        <item name="android:layout_marginRight">@dimen/space_l</item>
        <item name="android:background">@drawable/bt_bg</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    <!-- 全局头像的style -->
</style>
    <style name="global_head_sculpture_style">
        <item name="android:layout_width">@dimen/space_xxl</item>
        <item name="android:layout_height">@dimen/space_xxl</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <!-- 全局radioButton的style -->
    <style name="global_radio_bt_style">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/space_xl</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">@dimen/space_s_mid</item>
    </style>
    <!-- 发布需求Linearlayout的style -->
    <style name="publish_ll_style">
        <item name="android:layout_marginTop">@dimen/space_s</item>
        <item name="android:layout_marginBottom">@dimen/space_s</item>
        <item name="android:layout_marginRight">@dimen/space_m</item>
        <item name="android:layout_marginLeft">@dimen/space_xs</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- 发布需求Textview的style -->
    <style name="publish_tv_style">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/space_xxl</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--需求详情的LinearLayout-->
    <style name="need_detail_ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/space_m</item>
        <item name="android:layout_marginTop">@dimen/space_m</item>
    </style>

    <!--需求详情的TextView-->
    <style name="need_detail_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- 标题右边ImageButton的style -->
    <style name="right_button_style">
        <item name="android:layout_marginRight">@dimen/space_m</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">@dimen/space_m</item>
        <item name="android:layout_height">@dimen/space_m</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!-- 个人中心的头像区文字-->
    <style name="person_header_text">
        <item name="android:layout_marginTop">@dimen/space_s</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_s_plus</item>
    </style>
    <!-- 个人中心的头像区编辑个人信息-->
    <style name="person_header_btn">
        <item name="android:textSize">@dimen/txt_s_plus</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:paddingLeft">@dimen/space_s</item>
        <item name="android:paddingRight">@dimen/space_s</item>
        <item name="android:layout_marginTop">@dimen/space_l</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/space_l</item>
    </style>
    <!-- 个人中心的分割线-->
    <style name="person_view">
        <item name="android:layout_height">@dimen/space_xxs</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorLightGrey</item>
    </style>
    <!-- 个人中心的我的订单-->
    <style name="person_m_order">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/space_l</item>
        <item name="android:paddingLeft">@dimen/space_xl</item>
        <item name="android:paddingBottom">@dimen/space_m</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
    <!-- 个人中心的箭头-->
    <style name="person_m_order_btn">
        <item name="android:layout_marginTop">@dimen/space_m</item>
        <item name="android:layout_marginRight">@dimen/space_m</item>
        <item name="android:layout_width">@dimen/space_xl</item>
        <item name="android:layout_height">@dimen/space_xl</item>
        <item name="android:src">@mipmap/ic_launcher_arrow_right</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <!--注册界面的LinearLayout-->
    <style name="fragment_register">
        <item name="android:layout_marginTop">@dimen/space_l</item>
        <item name="android:layout_marginLeft">@dimen/space_xxl</item>
        <item name="android:layout_marginRight">@dimen/space_xxl</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/space_xxl</item>
    </style>
    <!--注册界面的ImageView-->
    <style name="fragment_register_image">
        <item name="android:layout_centerVertical">true</item>>
        <item name="android:padding">@dimen/space_xs</item>>
        <item name="android:layout_marginLeft">@dimen/space_ss</item>
        <item name="android:layout_width">@dimen/space_xl</item>
        <item name="android:layout_height">@dimen/space_xl</item>
    </style>
    <!--注册界面的EditText-->
    <style name="fragment_register_edit_text">
        <item name="android:layout_marginLeft">@dimen/space_xxl</item>>
        <item name="android:layout_marginRight">@dimen/space_xxl</item>>
        <item name="android:textSize">@dimen/txt_s_plus</item>>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--登录界面的使用qq/微信ImageButton-->
    <style name="fragment_login_btn">
        <item name="android:background">@android:color/transparent</item>>
        <item name="android:scaleType">fitXY</item>>
        <item name="android:layout_marginLeft">@dimen/space_xxxxl</item>>
        <item name="android:layout_marginTop">@dimen/space_s</item>
        <item name="android:layout_height">@dimen/space_l</item>
        <item name="android:layout_width">@dimen/space_l</item>
    </style>
    <!--登陆界面的使用微信/qq文本-->
    <style name="fragment_login_text">
        <item name="android:layout_marginTop">@dimen/space_m</item>>
        <item name="android:layout_marginLeft">@dimen/space_xxxl</item>>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_width">wrap_content</item>>
    </style>

    <!--我的需求界面的LinLayout-->
    <style name="fragment_my_demand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>\
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/space_xs</item>
    </style>
    <!--我的需求界面的TextView-->
    <style name="fragment_my_demand_text_view">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/txt_m</item>
        <item name="android:layout_marginLeft">@dimen/space_s</item>
    </style>
    <!--我的需求界面的ImageView-->
    <style name="fragment_my_demand_image">
        <item name="android:layout_width">@dimen/space_l</item>
        <item name="android:layout_height">@dimen/space_l</item>
        <item name="android:src">@mipmap/ic_launcher_point</item>
        <item name="android:layout_marginLeft">@dimen/space_ss</item>
        <item name="android:layout_marginTop">@dimen/space_xxs</item>
    </style>

    <!--底部弹框的样式-->
    <style name="dialog_bottom_filter">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/dialog_bottom_anim_in_out</item>
    </style>

    <!--进出动画-->
    <style name="dialog_bottom_anim_in_out" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>

    <!--时间选择弹窗SelectNumberPicker-->
    <style name="select_time_piker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>

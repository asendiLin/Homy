<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTheme">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/ib_back_community"
                android:layout_width="@dimen/space_l"
                android:layout_height="@dimen/space_l"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"
                android:visibility="gone" />
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:layout_centerInParent="true"
            android:textSize="@dimen/txt_m"
            android:textStyle="bold" />
            <ImageButton
                android:id="@+id/ib_publish_feeling"
                android:src="@drawable/ic_publish_feeling"
                style="@style/right_button_style"
                android:visibility="gone"
                />
            <Button
                android:text="Send"
                android:background="@drawable/shape_corner"
                android:textSize="@dimen/txt_m"
                android:textAllCaps="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/ib_send_feeling_content"
                android:layout_marginRight="@dimen/space_m"
                android:layout_width="@dimen/space_xxl"
                android:layout_height="@dimen/space_l"
                android:visibility="gone"
                />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
</LinearLayout>
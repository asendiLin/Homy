                <!--android:indeterminateDrawable="@drawable/loading_circle" />-->

            <TextView
                android:id="@+id/item_message_sender_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@mipmap/message_right_green_bg"
                android:text="hello"
                android:textColor="@color/colorTextWhite" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/item_message_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_s_mid" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_message_receiver_icon"
